# API Settings
API_V1_STR=/api/v1
SERVER_NAME="Payment System API"
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SECRET_KEY=changethisinproduction  # Generate a secure random string

# CORS Settings (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost

# PostgreSQL Connection
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=payment_system
POSTGRES_PORT=5432

# Redis Connection (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Payment Settings
DEFAULT_CURRENCY=INR
MIN_DEPOSIT_AMOUNT=500
MAX_DEPOSIT_AMOUNT=300000
MIN_WITHDRAWAL_AMOUNT=1000
MAX_WITHDRAWAL_AMOUNT=1000000

# File Upload
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,pdf,xls
MAX_CONTENT_LENGTH=16777216  # 16 MB

# Webhook Settings
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=60  # seconds

# API Rate Limiting
DEFAULT_RATE_LIMIT=60  # requests per minute